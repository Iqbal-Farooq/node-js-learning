<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(prods.length>0) { %>
        <div class="grid">
            <% for (let prodct of prods ) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= prodct.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= prodct.imageUrl %>" alt="<%= prodct.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= prodct.price %></h2>
                    <p class="product__description"><%= prodct.description %></p>
                </div>
                <div class="card__actions">
                    <form accept="/add-to-cart" method="POST" >
                        <button class="submit">Add to Cart</button>
                    </form>
                   
                </div>
            </article>
            <%}%>
        </div>
        <%} else {%>
            <h1> No Products Found</h1>
            <%} %>
    </main>
    <%- include('../includes/end.ejs') %>